<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_titulo_dispositivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Dispositivos Disponibles" />

    <ListView
        android:id="@+id/lista_dispositivos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_habla_perro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habla perro"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_subir_cuchillas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Subir cuchillas"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_bajar_cuchillas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bajar cuchillas"
            android:visibility="invisible" />

    </LinearLayout>


</RelativeLayout>