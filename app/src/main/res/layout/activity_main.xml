<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_titulo_dispositivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Dispositivos Disponibles"
        tools:visibility="visible" />

    <ListView
        android:id="@+id/lista_dispositivos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/view_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="invisible">

        <Button
            android:id="@+id/btn_habla_perro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Habla perro"

            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_avanzar"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="Avanzar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_izquierda"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:text="Izquierda" />

                <Button
                    android:id="@+id/btn_derecha"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:text="Derecha" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_retroceder"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="Retroceder" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_subir_cuchillas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Subir cuchillas"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_bajar_cuchillas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bajar cuchillas"
            android:visibility="visible" />

    </LinearLayout>


</RelativeLayout>